sudo apt update
sudo apt install mariadb-client mariadb-server php7.0 php7.0-mysql apache2 libapache2-mod-php7.0

create database wordpress;
use wordpress;
create user 'indec'@'localhost';
grant all privileges on wordpress.* to 'indec'@'localhost' identified by '<password>';
flush privileges;
exit;

cd /var/www/micrositios

