sudo apt update
sudo apt install git bash-completion

git --version

source /etc/bash_completion.d/git-prompt

git config --global core.editor vim
git config --global user.email your-email@example.com
git config --global user.name your-username
git config --global alias.cb "checkout -b"
git config --global alias.ch checkout
git config --global alias.cm "commit -m"
git config --global alias.ca "commit -a -m"
git config --global alias.lo "log --oneline"
git config --global alias.lod "log --oneline --decorate"
git config --global alias.adog "log --all --decorate --oneline --graph"
git config --global alias.psho "push origin"

git config --global credential.helper store --file
# default ~/.git_credentials
